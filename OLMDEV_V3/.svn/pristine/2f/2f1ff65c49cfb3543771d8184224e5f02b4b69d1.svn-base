@charset "utf-8";
/* CSS Document */

/* Reset */
body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, textarea, p, blockquote, th, td, input, select, textarea, button, table {
	margin: 0;
	padding: 0;
}
fieldset, img {
	border: 0 none
}
dl, ul, ol, menu, li {
	list-style: none;
}
blockquote, q {
	quotes: none
}
blockquote:before, blockquote:after, q:before, q:after {
	content: '';
	content: none
}
input, select, textarea, button {
	vertical-align: middle
}
button {
	border: 0 none;
	background-color: transparent;
	cursor: pointer
}
html, body {
	-webkit-font-smoothing: antialiased;
	height: 100%;
	line-height: 20px;
	font-family:'NanumSquare', "맑은고딕", "Malgun Gothic", "돋움", Dotum, Shruti, Arial;
	font-size: 13px;
	color: #646464;
	
}

table {
	border-collapse: collapse;
	border-spacing: 0;
	text-align: justify;
}

body, th, td, input, select, textarea, button {
	/*font-size: 14px;*/
	color: #666;
}
a {
	color: #333;
	text-decoration: none;
	outline: none;
select-dummy: expression(this.hideFocus=true);
}
a:active, a:hover {
	text-decoration: none
}
address, caption, cite, code, dfn, em, var {
	font-style: normal;
	font-weight: normal
}
/* Common */
.clear {
	display: block;
	overflow: visible!important;
	width: auto!important;
	clear: both;
	float: none;
}
.fL {
	float: left;
}
.fR {
	float: right;
}

